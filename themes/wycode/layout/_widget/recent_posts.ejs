<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h4 class="widget-title"><i class="bi bi-clock-fill"></i> <%= __('recent_posts') %></h4>
    <div class="widget">
      <ul class="recent-list">
        <% site.posts.sort('date', -1).limit(10).each(function(post){ %>
          <li class="recent-list-item">
            <a href="<%- url_for(post.path) %>"><%= post.title || '(no title)' %></a>
          </li>
        <% }); %>
      </ul>
      <a class="all-post-link" href="<%- url_for(theme.menu.archives) %>"><i class="bi bi-folder2-open"></i>  查看全部</a>
    </div>
  </div>
<% } %>